<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:layout_gravity="center">

	<EditText android:gravity="center" android:id="@+id/EditID"
		android:text="" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center"
		android:singleLine="true" android:selectAllOnFocus="true"
		android:inputType="number"></EditText>

	<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:layout_gravity="center" android:gravity="center">


		<Button android:layout_height="wrap_content"
			android:layout_gravity="center|bottom" android:id="@+id/Button01"
			android:text="@+id/Button01" android:layout_width="wrap_content"></Button>
		<Button android:layout_height="wrap_content" android:id="@+id/Button02"
			android:text="@+id/Button02" android:layout_gravity="center|bottom"
			android:layout_width="wrap_content"></Button>

	</LinearLayout>





	<ScrollView android:layout_height="match_parent"
		android:layout_width="match_parent" android:layout_weight="1">
		<TextView android:text="@+id/TextView01"
			android:layout_gravity="center" android:id="@+id/TextView01"
			android:layout_height="match_parent" android:layout_width="match_parent"
			android:scrollbars="vertical"></TextView>
	</ScrollView>



</LinearLayout>
