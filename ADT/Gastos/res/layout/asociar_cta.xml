<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="65dp"
        android:layout_y="6dp"
        android:text="Asociar Cuenta"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView_UserName"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_x="25dp"
        android:layout_y="42dp"
        android:text="A: User Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="24dp"
        android:layout_y="82dp"
        android:text="Cuenta"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="18dp"
        android:layout_y="186dp"
        android:text="Monto"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTxtMonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="92dp"
        android:layout_y="184dp"
        android:ems="10"
        android:inputType="numberSigned" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btn_menu_asociar_cta"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_x="76dp"
        android:layout_y="238dp"
        android:text="Ok" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_x="32dp"
        android:layout_y="117dp"
        android:ems="10" />

</AbsoluteLayout>
